<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.wansu.seekbar.SeekbarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx1"
        style="?android:textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_margin="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="100"
        android:id="@+id/seekBar1"
        android:progressDrawable="@drawable/colo3"
        android:thumb="@drawable/colo3control"
        android:layout_below="@+id/textView1"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx2"
        style="?android:textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_below="@id/seekBar1"
        android:layout_margin="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/textView2"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/colo1"
        android:thumb="@drawable/colo1control"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx3"
        style="?android:textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_below="@id/seekBar2"
        android:layout_margin="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_below="@+id/textView3"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/colo2"
        android:thumb="@drawable/colo2control"
        android:layout_margin="16dp" />

</RelativeLayout>
